{
  "name": "passquirk-rpg-bot",
  "version": "1.0.0",
  "description": "Bot de Discord RPG basado en PassQuirk con sistema completo de combate, inventario y aventuras",
  "main": "PassQuirkRPG/bot/index.js",
  "scripts": {
    "start": "node PassQuirkRPG/bot/index.js",
    "dev": "nodemon PassQuirkRPG/bot/index.js",
    "deploy": "node scripts/deploy-commands.js",
    "test": "jest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "mcp:mongodb": "node mcp/mongodb-server.js",
    "bot:start": "pm2 start ecosystem.config.js",
    "bot:stop": "pm2 stop ecosystem.config.js",
    "bot:restart": "pm2 restart ecosystem.config.js",
    "bot:logs": "pm2 logs passquirk-rpg"
  },
  "keywords": [
    "discord",
    "bot",
    "rpg",
    "passquirk",
    "game"
  ],
  "author": "PassQuirk Team",
  "license": "MIT",
  "dependencies": {
    "@discordjs/voice": "^0.19.0",
    "@modelcontextprotocol/sdk": "^1.23.0",
    "@supabase/supabase-js": "^2.57.4",
    "axios": "^1.6.2",
    "discord.js": "^14.25.0",
    "dotenv": "^16.3.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "mongodb": "^7.0.0",
    "mongoose": "^8.0.3",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "pm2": "^6.0.14"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
